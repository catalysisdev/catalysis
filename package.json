{
  "private": true,
  "scripts": {
    "version:add": "changeset add",
    "version:persist": "changeset version",
    "version:publish": "changeset publish",
    "release": "changeset publish",
    "preinstall": "npx only-allow pnpm",
    "clean": "nx run-many --target=clean --all --skip-nx-cache && nx reset",
    "lint": "nx run-many --target=lint --all --skip-nx-cache",
    "lint:affected": "nx affected --target=lint --all",
    "lint:fix": "nx run-many --target=lint:fix --all --skip-nx-cache",
    "lint:fix:affected": "nx affected --target=lint:fix --all",
    "test": "nx run-many --target=test --all --skip-nx-cache",
    "test:affected": "nx affected --target=test --all",
    "tsc": "nx run-many --target=tsc --all --skip-nx-cache",
    "tsc:affected": "nx affected --target=tsc --all",
    "build": "nx run-many --target=build --all --skip-nx-cache",
    "build:affected": "nx affected --target=build --all",
    "gestalt": "nx build gestaltjs && packages/gestalt/bin/run.js",
    "create-app": "nx build @gestaltjs/create-app && packages/create-app/bin/run.js",
    "graph": "nx graph"
  },
  "type": "module",
  "dependencies": {
    "@oclif/core": "^1",
    "@oclif/plugin-help": "^5",
    "execa": "^6.0.0",
    "tempy": "^2.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.19.0",
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.14",
    "@types/rimraf": "^3.0.2",
    "@types/shelljs": "^0.8.11",
    "@types/tmp": "^0.2.3",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.14.11",
    "eslint": "^8.6.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "fast-glob": "^3.2.10",
    "fs-extra": "^10.0.0",
    "install": "^0.13.0",
    "pathe": "^0.2.0",
    "picocolors": "^1.0.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.66.1",
    "rollup-plugin-dts": "^4.1.0",
    "rollup-plugin-esbuild": "^4.8.2",
    "rollup-plugin-multi-input": "^1.3.1",
    "rollup-plugin-strip-shebang": "^1.2.10",
    "shelljs": "^0.8.5",
    "shx": "^0.3.4",
    "tmp": "^0.2.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "vitest": "^0.2.8",
    "@nrwl/workspace": "latest",
    "@nrwl/cli": "latest",
    "@nrwl/tao": "latest"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "no-console": "error"
    },
    "env": {
      "node": true,
      "commonjs": true
    },
    "ignorePatterns": [
      "dist",
      "node_modules",
      "bin"
    ]
  }
}
