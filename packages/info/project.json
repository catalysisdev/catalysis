{
  "name": "info",
  "root": "packages/info",
  "sourceRoot": "packages/info/src",
  "projectType": "library",
  "implicitDependencies": ["core"],
  "tags": ["scope:feature"],
  "targets": {
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm shx rm -rf dist",
        "cwd": "packages/info"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["dist/"],
      "inputs": ["{projectRoot}/src/**/*"],
      "options": {
       "command": "pnpm tsc -b ./tsconfig.build.json && pnpm recursive-copy src dist -w -f 'public/**/*.{js,d.ts}'",
        "cwd": "packages/info"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint './**/*.{js,ts,d.ts}'",
        "cwd": "packages/info"
      }
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint './**/*.{js,ts,d.ts}' --fix",
        "cwd": "packages/info"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm vitest run",
        "cwd": "packages/info"
      }
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "command": "pnpm vitest watch",
        "cwd": "packages/info"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm tsc --noEmit",
        "cwd": "packages/info"
      }
    }
  }
}
