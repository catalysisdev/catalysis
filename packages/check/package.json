{
  "name": "@gestaltjs/check",
  "version": "0.7.4",
  "description": "A set of utilities responsible checking Gestalt projects",
  "type": "module",
  "files": [
    "/dist"
  ],
  "scripts": {
    "clean": "shx rm -rf dist",
    "prepack": "pnpm run build",
    "build": "pnpm clean && rollup -c ./rollup.config.js",
    "lint": "prettier -c src/** && eslint 'src/**/*.ts'",
    "lint:fix": "prettier -w src/** && eslint 'src/**/*.ts' --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ci": "vitest run --reporter=default --reporter=junit --outputFile=./junit-check.xml",
    "tsc": "tsc && echo"
  },
  "eslintConfig": {
    "extends": [
      "../../.eslintrc.cjs"
    ]
  },
  "peerDependencies": {
    "@gestaltjs/core": "0.7.4",
    "@oclif/core": "1.7.0"
  },
  "devDependencies": {
    "@gestaltjs/core": "0.7.4",
    "@oclif/core": "1.7.0"
  },
  "oclif": {
    "commands": "./dist/cli/commands",
    "topics": {
      "check": {
        "description": "Run checks against your project (style, types)"
      }
    }
  },
  "engine-strict": true,
  "engines": {
    "node": "^14.13.1 || >=16.0.0 || >=17.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ]
}
