{
  "name": "core",
  "root": "packages/core",
  "sourceRoot": "packages/core/src",
  "projectType": "library",
  "tags": ["scope:foundation"],
  "targets": {
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm shx rm -rf dist",
        "cwd": "packages/core"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "inputs": ["{projectRoot}/src/**/*"],
      "options": {
        "command": "pnpm tsc -b ./tsconfig.build.json",
        "cwd": "packages/core"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm prettier -c src/** && eslint './**/*.{js,ts}'",
        "cwd": "packages/core"
      }
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm prettier -w src/** && eslint './**/*.{js,ts}' --fix",
        "cwd": "packages/core"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm vitest run",
        "cwd": "packages/core"
      }
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "command": "pnpm vitest watch",
        "cwd": "packages/core"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm tsc --noEmit",
        "cwd": "packages/core"
      }
    }
  }
}
