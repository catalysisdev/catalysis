{
  "name": "@gestaltjs/core",
  "version": "0.3.2",
  "private": true,
  "description": "Set of Getalt tools and models that are shared across all the features",
  "keywords": [
    "gestalt",
    "gestaltjs",
    "web"
  ],
  "license": "MIT",
  "type": "module",
  "exports": {
    "./cli/logger/transport": {
      "import": "./dist/cli/logger/transport.js",
      "types": "./dist/cli/logger/transport.d.ts"
    },
    "./cli": {
      "import": "./dist/cli/index.js",
      "types": "./dist/cli/index.d.ts"
    },
    "./framework": {
      "import": "./dist/framework/index.js",
      "types": "./dist/framework/index.d.ts"
    }
  },
  "files": [
    "/dist"
  ],
  "scripts": {
    "clean": "shx rm -rf dist",
    "prepack": "cross-env NODE_ENV=production pnpm run build",
    "build": "pnpm clean && rollup -c",
    "lint": "prettier -c src/** && eslint src/**/*.ts",
    "lint:fix": "prettier -w src/** && eslint src/**/*.ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "tsc": "tsc --noEmit"
  },
  "eslintConfig": {
    "extends": [
      "../../package.json"
    ]
  },
  "devDependencies": {
    "@types/pino": "^7.0.5",
    "@types/shelljs": "^0.8.11",
    "case-anything": "^2.1.10",
    "fastify": "^3.27.2",
    "find-up": "^6.3.0",
    "picocolors": "^1.0.0",
    "shelljs": "^0.8.5",
    "vite": "^2.8.4"
  },
  "engine-strict": true,
  "engines": {
    "node": "^14.13.1 || >=16.0.0 || >=17.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "peerDependencies": {
    "pino": "^7.8.0",
    "pino-pretty": "^7.5.1"
  }
}
