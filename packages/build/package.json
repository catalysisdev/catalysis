{
  "name": "@gestaltjs/build",
  "version": "0.7.3",
  "description": "A set of utilities responsible for building the app",
  "type": "module",
  "files": [
    "/dist"
  ],
  "scripts": {
    "clean": "shx rm -rf dist",
    "prepack": "pnpm run build",
    "build": "pnpm clean && rollup -c",
    "lint": "prettier -c src/** && eslint src/**/*.ts",
    "lint:fix": "prettier -w src/** && eslint src/**/*.ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ci": "vitest run --reporter=default --reporter=junit --outputFile=./junit-build.xml",
    "tsc": "tsc --noEmit"
  },
  "eslintConfig": {
    "extends": [
      "../../package.json"
    ]
  },
  "peerDependencies": {
    "@gestaltjs/core": "0.7.3",
    "@oclif/core": "1.3.4"
  },
  "devDependencies": {
    "@gestaltjs/core": "0.7.3",
    "@oclif/core": "1.3.4"
  },
  "oclif": {
    "commands": "./dist/cli/commands"
  }
}
