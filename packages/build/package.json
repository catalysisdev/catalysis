{
  "name": "@gestaltjs/build",
  "version": "0.3.2",
  "private": true,
  "description": "A set of utilities responsible for building the app",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "files": [
    "/src",
    "/oclif.manifest.json"
  ],
  "scripts": {
    "clean": "shx rm -rf dist",
    "prepublishOnly": "pnpm run build",
    "build": "shx rm -rf dist && tsc -b",
    "build:watch": "tsc -b --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "tsc": "tsc -b --incremental"
  },
  "eslintConfig": {
    "extends": [
      "../../package.json"
    ]
  },
  "devDependencies": {
    "@gestaltjs/support": "0.3.2",
    "@gestaltjs/core": "0.3.2"
  },
  "oclif": {
    "commands": "./dist/commands"
  }
}
