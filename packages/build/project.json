{
  "name": "build",
  "root": "packages/build",
  "sourceRoot": "packages/build/src",
  "projectType": "library",
  "implicitDependencies": ["core"],
  "tags": ["scope:feature"],
  "targets": {
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm shx rm -rf dist",
        "cwd": "packages/build"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["dist/"],
      "inputs": ["{projectRoot}/src/**/*"],
      "options": {
        "command": "pnpm tsc -b ./tsconfig.build.json",
        "cwd": "packages/build"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint './**/*.{js,ts}'",
        "cwd": "packages/build"
      }
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint './**/*.{js,ts}' --fix",
        "cwd": "packages/build"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm vitest run",
        "cwd": "packages/build"
      }
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "command": "pnpm vitest watch",
        "cwd": "packages/build"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm tsc --noEmit",
        "cwd": "packages/build"
      }
    }
  }
}
