{
  "name": "@gestaltjs/gestalt",
  "version": "0.3.2",
  "private": false,
  "description": "A tool for building Gestalt web app",
  "keywords": [
    "gestalt",
    "gestaltjs",
    "web"
  ],
  "license": "MIT",
  "bin": {
    "gestalt": "./bin/gestalt-run"
  },
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "shx rm -rf dist",
    "prepublishOnly": "pnpm run build",
    "build": "shx rm -rf dist && rollup -c",
    "build:watch": "tsc -b --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "tsc": "tsc -b --incremental"
  },
  "eslintConfig": {
    "extends": [
      "../../package.json"
    ]
  },
  "devDependencies": {
    "@gestaltjs/load": "0.3.2",
    "@gestaltjs/core": "0.3.2",
    "@oclif/core": "^1",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-plugins": "^2.0.1",
    "@oclif/test": "^2",
    "@types/shelljs": "^0.8.11",
    "vitest": "^0.1.23"
  },
  "engine-strict": true,
  "engines": {
    "node": ">= 12"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "oclif": {
    "bin": "gestalt",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins",
      "@gestaltjs/build",
      "@gestaltjs/db",
      "@gestaltjs/lint",
      "@gestaltjs/serve",
      "@gestaltjs/test",
      "@gestaltjs/type-check"
    ],
    "topicSeparator": " ",
    "topics": {
      "serve": {
        "description": "Serve the Application"
      }
    }
  }
}
