{
  "name": "@gestaltjs/lint",
  "version": "0.3.2",
  "private": true,
  "description": "A set of utilities responsible linting Gestalt apps",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "files": [
    "/src",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "scripts": {
    "clean": "shx rm -rf dist",
    "prepack": "pnpm run build",
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "tsc": "tsc -b --incremental"
  },
  "eslintConfig": {
    "extends": [
      "../../package.json"
    ]
  },
  "peerDependencies": {
    "@oclif/core": "0.5.10",
    "@gestaltjs/core": "0.3.2"
  },
  "oclif": {
    "commands": "./dist/commands",
    "plugins": []
  }
}
