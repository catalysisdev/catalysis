{
  "name": "@gestaltjs/lint",
  "version": "0.4.0",
  "private": true,
  "description": "A set of utilities responsible linting Gestalt apps",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "files": [
    "/src",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "scripts": {
    "clean": "shx rm -rf dist",
    "prepack": "pnpm run build",
    "build": "true",
    "lint": "prettier -c src/** && eslint src/**/*.ts",
    "lint:fix": "prettier -w src/** && eslint src/**/*.ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "tsc": "tsc --noEmit"
  },
  "eslintConfig": {
    "extends": [
      "../../package.json"
    ]
  },
  "oclif": {
    "commands": "./dist/commands",
    "plugins": []
  }
}
