{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": ["ES2021"],
    "module": "ES2020",
    "target": "ES2021",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "noEmit": false,
    "declaration": true,
    "inlineSourceMap": false,
    "isolatedModules": false,
    "sourceMap": true,
    "composite": true,
    "paths": {
      "gestaltjs/*": ["../packages/gestaltjs/src/node/manifests/*.ts"],
      "@gestaltjs/core/*": ["../packages/core/src/*.ts"],
    }
  },
  "exclude": ["dist/**", "**/*/vitest.config.ts", "node_modules"]
}
